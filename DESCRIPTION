Package: shinyMobile
Type: Package
Title: Mobile Ready 'shiny' Apps with Standalone Capabilities
Version: 1.0.1
Authors@R: c(
  person("David", "Granjon", email = "dgranjon@ymail.com", role = c("aut", "cre")),
  person("Victor", "Perrier", email = "info@dreamrs.fr", role = "aut"),
